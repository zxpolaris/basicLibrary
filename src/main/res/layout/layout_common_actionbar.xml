<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/actionbar_bg_color">

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_btn_actionbar"
        android:contentDescription="@string/image_content_desc"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/actionbar_title_max_width"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/primary"
        android:textSize="@dimen/actionbar_title_text_size" />


    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/common_margin_normal"
        android:paddingRight="@dimen/common_margin_normal"
        android:text="@string/app_name"
        android:textColor="@color/primary_hover"
        android:textSize="@dimen/actionbar_right_text_size"
        android:visibility="gone" />

    <View
        style="@style/CommonLine"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_bottom_line_color" />

</RelativeLayout>